<idea-plugin>
    <id>com.example.pycharmfilestructuregenerate.dirdoc</id>
    <name>File Tree Generator</name>
    <vendor email="zonemaxq@gmail.com" url="https://github.com/Avaxerrr">Avaxerrr</vendor>
    <description><![CDATA[
        Automatically generates and maintains a directory structure documentation file for Python projects.
        <br><br>
        <b>Features:</b>
        <ul>
            <li>Generates text or markdown documentation of your project structure</li>
            <li>Automatically updates when files or directories change</li>
            <li>Customizable filtering and formatting options</li>
            <li>Highlights Python modules and packages</li>
        </ul>
        <br>
        <b>Usage:</b>
        <ul>
            <li>Manual generation: Tools → Generate File Structure</li>
            <li>Automatic updates: Enable in Settings → Tools → File Tree Generator</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.example.pycharmfilestructuregenerate.dirdoc.SettingsState"/>
        <applicationConfigurable parentId="tools"
                                 instance="com.example.pycharmfilestructuregenerate.dirdoc.SettingsConfigurable"
                                 id="com.example.pycharmfilestructuregenerate.dirdoc.SettingsConfigurable"
                                 displayName="File Tree Generator"/>
        <notificationGroup id="File Tree Generator"
                           displayType="BALLOON"
                           isLogByDefault="true"/>
    </extensions>

    <applicationListeners>
        <listener class="com.example.pycharmfilestructuregenerate.dirdoc.FileChangeListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>

    <actions>
        <action id="com.example.pycharmfilestructuregenerate.dirdoc.GenerateAction"
                class="com.example.pycharmfilestructuregenerate.dirdoc.GenerateAction"
                text="Generate File Structure"
                description="Generate a documentation file with the project's directory structure"
                icon="/META-INF/icon/pluginIcon.svg">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
